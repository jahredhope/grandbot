{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2015", "es2017"],
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "pretty": false,
    "skipLibCheck": true
  },
  "include": ["src/"],
  "compileOnSave": false
}
